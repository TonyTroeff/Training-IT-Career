@model IEnumerable<GenreViewModel>

@{
    ViewData["Title"] = "Genres";
}

<h1>Genres</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArtistsCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SongsCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var viewModel in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => viewModel.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => viewModel.ArtistsCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => viewModel.SongsCount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@viewModel.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@viewModel.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@viewModel.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
